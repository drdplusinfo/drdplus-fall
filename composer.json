{
  "name": "drd-plus/fall",
  "license": "MIT",
  "type": "project",
  "description": "Wounds from fall for DrD+",
  "keywords": [
    "DrD",
    "DrD plus",
    "fall",
    "wounds",
    "horse",
    "riding"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/strict-object": "dev-master",
    "drd-plus/tables": "dev-master",
    "drd-plus/configurator-skeleton": "dev-master",
    "drd-plus/skills": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "mockery/mockery": "~0.9",
    "granam/exceptions-hierarchy": "~4.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "rm -fr $PWD/css/generic && ln -s ../vendor/drd-plus/configurator-skeleton/css/generic ./css/generic",
      "rm -fr $PWD/js/generic && ln -s ../vendor/drd-plus/configurator-skeleton/js/generic ./js/generic",
      "rm -fr $PWD/images/generic && ln -s ../vendor/drd-plus/configurator-skeleton/images/generic ./images/generic"
    ]
  }
}
